<p id="notice"><%= notice %></p>

<h1>Cryptos</h1>
 <div class="container">
    <div class="row align-items-center">
      <div class="col">
        <%= form_for(:crypto, url: scraper_path) do |f| %>
              <%= f.submit "Scrapper", class:"btn btn-primary"%>
          <% end %>
      </div>
      <div class="col">
        <%= form_for(:crypto, url: reset_db_path) do |f| %>
              <%= f.submit "Reset", class:"btn btn-primary" %>
          <% end %>
      </div>
    </div>
</div>

<table class="thead-light">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptos.each do |crypto| %>
      <tr>
        <td><%= crypto.name %></td>
        <td><%= crypto.price %></td>
        <td><%= link_to 'Show', crypto %></td>
        <td><%= link_to 'Edit', edit_crypto_path(crypto) %></td>
        <td><%= link_to 'Destroy', crypto, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crypto', new_crypto_path %>

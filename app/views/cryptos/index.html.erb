<p id="notice"><%= notice %></p>

<h1>Cryptonator</h1>
 <div class="container">
    <div class="row align-items-center">
      <div class="col">
        <%= form_for(:crypto, url: scraper_path) do |f| %>
              <%= f.submit "Scrap & Update", class:"btn btn-primary"%>
          <% end %>
      </div>
    </div>
</div>

<table class="thead-light">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cryptos.each do |crypto| %>
      <tr>
        <td><%= crypto.name %></td>
        <td><%= crypto.price %></td>
        <td><%= link_to 'Voir', crypto %></td>
        <td><%= link_to 'Ne pas afficher', crypto, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
